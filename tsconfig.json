{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "lib": ["DOM", "ES7", "ES2017", "ES2018", "ES2019", "dom.iterable"],
    "outDir": "./dist",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "strict": true,

    "importHelpers": true,
    "noUnusedLocals": true,
    "experimentalDecorators": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "typeRoots": ["typings/**/*.d.ts", "node_modules/@types"],
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": [
    "src/**/*",
    "src/app/types/global.d.ts",
    "./.openapi/openapi-config.ts",
    "typings/**/*.d.ts",
    "./node_modules/@types",
    "jest.config.ts"
  ],
  "exclude": ["**/*.js"]
}
